#! /usr/bin/python2

import sys
import os
import re

limit = int(sys.argv[1])
dir = sys.argv[2]

put, get = os.popen4("du --block-size=1 " + dir)

while 1:
    line = get.readline()
    if not line: break
    if re.match(r'^\d', line):
        split = line.index('\t')
        size = int(line[:split])
        if size >= limit:
            pref = ''
            #~ print size
            for p in 'kMGTPEZY':
                if size < 10000: break
                size = size / 1000
                pref = p
            print size, pref + 'B' + line[split:],
